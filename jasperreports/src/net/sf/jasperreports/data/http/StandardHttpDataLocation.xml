<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<class name="net.sf.jasperreports.data.http.StandardHttpDataLocation">
		<map-to xml="httpDataLocation"/>
		<field name="method" type="string" handler="net.sf.jasperreports.data.http.RequestMethodFieldHandler">
			<bind-xml name="method" node="element"/>
		</field>
		<field name="url" type="string">
			<bind-xml name="url" node="element"/>
		</field>
		<field name="username" type="string">
			<bind-xml name="username" node="element"/>
		</field>
		<field name="password" type="string">
			<bind-xml name="password" node="element"/>
		</field>
		<field name="urlParameters" type="net.sf.jasperreports.data.http.HttpLocationParameter" collection="arraylist">
			<bind-xml name="urlParameter" node="element"/>
		</field>
		<field name="postParameters" type="net.sf.jasperreports.data.http.HttpLocationParameter" collection="arraylist">
			<bind-xml name="postParameter" node="element"/>
		</field>
	</class>
	
	<class name="net.sf.jasperreports.data.http.HttpLocationParameter">
		<map-to xml="httpLocationParameter"/>
		<field name="name" type="string">
			<bind-xml name="name" node="element"/>
		</field>
		<field name="value" type="string">
			<bind-xml name="value" node="element"/>
		</field>
	</class>
</mapping>
